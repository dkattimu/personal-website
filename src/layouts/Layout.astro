---
import Header from "../components/Header.astro"
interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title, description="Personal Website, Attimu D", image } = Astro.props;
let DFLT_BG ="bg-stone-100";
let DK_BG = "bg-stone-800;"
---

<!doctype html>
<html lang="en" class=`${DFLT_BG} dark dark:${DK_BG}`>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image}/>
		<title>{title}</title>
	
	</head>
	<body class=" items-stretch dark:text-white dark:bg-black min-h-screen">
		<Header/>
		<div class="mx-10">
			<slot/>
		</div>
		
	</body>
</html>
